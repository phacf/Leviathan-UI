{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Linting */
    // "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "containers/*": [
        "./src/containers/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "core/*": [
        "./src/core/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ],
      "@znt-ds/*": [
        "./src/design-system/*"
      ],
      "test-utils": [
        "./unit-test/test-utils"
      ],
      "@zenity-ui": [
        "./zenity-frontend/@zenity-ui"
      ],
      "@zenity-ui/layouts": [
        "./zenity-frontend/@zenity-ui/layouts"
      ],
      "@domain/*": [
        "./zenity-frontend/domain/*"
      ],
      "@data/*": [
        "./zenity-frontend/data/*"
      ],
      "@services/*": [
        "./zenity-frontend/main/services/*"
      ],
      "@utils/*": [
        "./zenity-frontend/main/presentation/utils/*"
      ],
      "@usecases/*": [
        "./zenity-frontend/main/usecases/*"
      ],
      "@presentation/*": [
        "./zenity-frontend/main/presentation/*"
      ],
      "@shared/*": [
        "./SharedLibraries/*"
      ],
      "react": [
        "./node_modules/@types/react"
      ]
    }
  },
  "include": [
    "src",
    "zenity-frontend",
    "test",
    "SharedLibraries"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
